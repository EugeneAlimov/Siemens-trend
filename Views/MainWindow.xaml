<Window x:Class="SiemensTrend.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SiemensTrend.Views"
        xmlns:viewModels="clr-namespace:SiemensTrend.ViewModels"
        xmlns:converters="clr-namespace:SiemensTrend.Visualization.Converters"
        mc:Ignorable="d"
        Title="Siemens Trend Monitor" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ??????? ?????? ? ???????? -->
        <ToolBarTray Grid.Row="0">
            <ToolBar>
                <Button x:Name="btnConnect" Content="Connect" Margin="3" Padding="5,3" Click="BtnConnect_Click"/>
                <Button x:Name="btnDisconnect" Content="Disconnect" Margin="3" Padding="5,3" Click="BtnDisconnect_Click"/>
                <Separator/>
                <Button x:Name="btnAddTag" Content="Add Tag" Margin="3" Padding="5,3" Click="BtnAddTag_Click"/>
                <Button x:Name="btnEditTag" Content="Edit Tag" Margin="3" Padding="5,3" Click="BtnEditTag_Click"/>
                <Button x:Name="btnRemoveTag" Content="Delete Tag" Margin="3" Padding="5,3" Click="BtnRemoveTag_Click"/>
                <Separator/>
                <Button x:Name="btnImportTags" Content="Import Tags" Margin="3" Padding="5,3" Click="BtnImportTags_Click"/>
                <Button x:Name="btnExportTags" Content="Export Tags" Margin="3" Padding="5,3" Click="BtnExportTags_Click"/>
                <Button x:Name="btnSaveTags" Content="Save Tags" Margin="3" Padding="5,3" Click="BtnSaveTags_Click"/>
                <Separator/>
                <Button x:Name="btnStartMonitoring" Content="Start Monitoring" Margin="3" Padding="5,3" Click="BtnStartMonitoring_Click"/>
                <Button x:Name="btnStopMonitoring" Content="Stop Monitoring" Margin="3" Padding="5,3" Click="BtnStopMonitoring_Click"/>
                <Separator/>
                <Button x:Name="btnSaveLog" Content="Save Log" Margin="3" Padding="5,3" Click="BtnSaveLog_Click"/>
                <Button x:Name="btnClearLog" Content="Clear Log" Margin="3" Padding="5,3" Click="BtnClearLog_Click"/>
            </ToolBar>
        </ToolBarTray>

        <!-- ???????? ??????? -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- ????? ?????? ? ????????? ????? -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>

                <!-- ??????? ????? -->
                <TextBlock Grid.Row="0" Margin="5" FontWeight="Bold" Text="??????? ?????:"/>
                <local:TagBrowserView Grid.Row="1" x:Name="tagBrowser" Margin="5"/>

                <!-- ?????? ????? ??? ??????????? -->
                <TextBlock Grid.Row="2" Margin="5" FontWeight="Bold" 
                           Text="{Binding MonitoredTags.Count, StringFormat='???? ??? ??????????? ({0}/10):'}"/>
                <ListView Grid.Row="3" Margin="5" ItemsSource="{Binding MonitoredTags}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="{Binding Name}" VerticalAlignment="Center"/>
                                <Button Grid.Column="1" Content="?" Width="20" Height="20" Margin="5,0,0,0"
                                        Command="{Binding DataContext.RemoveTagFromMonitoringCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                        CommandParameter="{Binding}"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!-- ??? -->
                <TextBlock Grid.Row="4" Margin="5" FontWeight="Bold" Text="???:"/>
                <TextBox x:Name="txtLog" Grid.Row="5" Margin="5" IsReadOnly="True" 
                         TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
            </Grid>

            <!-- ?????? ?????? ? ?????? ? ???????? -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- ???? ??? -->
                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Margin="5" FontWeight="Bold" 
                               Text="{Binding PlcTags.Count, StringFormat='???? ??? ({0}):'}"/>
                    <DataGrid x:Name="dgPlcTags" Grid.Row="1" Margin="5" ItemsSource="{Binding PlcTags}" 
                              AutoGenerateColumns="False" IsReadOnly="True" 
                              AlternatingRowBackground="LightGray">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="???????" Binding="{Binding GroupName}" Width="120"/>
                            <DataGridTextColumn Header="???" Binding="{Binding Name}" Width="150"/>
                            <DataGridTextColumn Header="??? ??????" Binding="{Binding DataType}" Width="100"/>
                            <DataGridTextColumn Header="?????" Binding="{Binding Address}" Width="100"/>
                            <DataGridTextColumn Header="???????????" Binding="{Binding Comment}" Width="*"/>
                            <DataGridTemplateColumn Header="????????" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="????????" Padding="3,1" Margin="2"
                                                Command="{Binding DataContext.AddTagToMonitoringCommand, 
                                                RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>

                <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" Background="LightGray"/>

                <!-- ???? DB ??? ?????? ??????????? -->
                <TabControl Grid.Row="2" Margin="5">
                    <TabItem Header="???? DB">
                        <DataGrid x:Name="dgDbTags" ItemsSource="{Binding DbTags}" 
                                  AutoGenerateColumns="False" IsReadOnly="True" 
                                  AlternatingRowBackground="LightGray">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="DB" Binding="{Binding DbName}" Width="120"/>
                                <DataGridTextColumn Header="????" Binding="{Binding Path}" Width="120"/>
                                <DataGridTextColumn Header="???" Binding="{Binding Name}" Width="150"/>
                                <DataGridTextColumn Header="??? ??????" Binding="{Binding DataType}" Width="100"/>
                                <DataGridTextColumn Header="????????" Binding="{Binding Offset}" Width="80"/>
                                <DataGridTextColumn Header="?????????????" Binding="{Binding IsOptimized}" Width="90"/>
                                <DataGridTemplateColumn Header="????????" Width="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="????????" Padding="3,1" Margin="2"
                                                    Command="{Binding DataContext.AddTagToMonitoringCommand, 
                                                    RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>
                    <TabItem Header="??????">
                        <local:ChartView x:Name="chartView"/>
                    </TabItem>
                </TabControl>
            </Grid>
        </Grid>

        <!-- ?????? ????????? -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="??????: "/>
                    <TextBlock Grid.Column="1" x:Name="statusConnectionState" Text="?????????" Foreground="Red"/>
                    <TextBlock Grid.Column="2" Text=" | ??????: " Margin="10,0,0,0"/>
                    <TextBlock Grid.Column="3" x:Name="statusProjectName" Text="??? ???????"/>
                    <TextBlock Grid.Column="4" Text="{Binding StatusMessage}" Margin="10,0,0,0"/>
                    <ProgressBar Grid.Column="5" x:Name="statusProgressBar" Width="100" Height="14" 
                                 Visibility="Collapsed" Value="{Binding ProgressValue}"/>
                </Grid>
            </StatusBarItem>
        </StatusBar>

        <!-- ????????? ???????? -->
        <Grid x:Name="progressRing" Grid.Row="1" Background="#80000000" Visibility="Collapsed">
            <Border Background="White" BorderBrush="Gray" BorderThickness="1" 
            CornerRadius="5" Padding="10" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="{Binding StatusMessage}" Margin="0,0,0,10" HorizontalAlignment="Center"/>
                    <ProgressBar Width="200" Height="20" Value="{Binding ProgressValue}" IsIndeterminate="{Binding IsLoading}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>

